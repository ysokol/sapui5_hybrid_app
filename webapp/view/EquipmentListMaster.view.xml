<mvc:View controllerName="my.sapui5_hybrid_app.controller.EquipmentListMaster" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:unif="sap.ui.unified">
	<semantic:MasterPage id="EquipmentPageId" title="PepsiCo Equipment" showNavButton="true" navButtonPress="onNavBack">
		<semantic:content>
			<ObjectHeader id="objectHeader" title="Customer {Customer} list of eqipment" icon="sap-icon://fridge">
				<attributes>
					<ObjectAttribute title="Customer" text="{Customer} - {CustomerDetails/Description}"/>
					<ObjectAttribute title="Timeline"
						text="{path:'PlannedStart', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short', strictParsing: true}} - {path:'PlannedFinish', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short', strictParsing: true}}"/>
				</attributes>
				<statuses>
					<ObjectStatus text="{Status}" state="{path:'Status', formatter:'.formatter.visitStatusState'}"
						icon="{path:'Status', formatter:'.formatter.visitStatusIcon'}"/>
				</statuses>
				<headerContainer>
					<HeaderContainer></HeaderContainer>
				</headerContainer>
			</ObjectHeader>
			<IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter icon="sap-icon://hint" tooltip="{Visit Details}">
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://fridge" tooltip="Equipment"></IconTabFilter>
					<IconTabFilter id="iconTabBarFilter3" icon="sap-icon://ui-notifications" tooltip="Notifications"></IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>
		<semantic:customFooterContent>
			<Button text="Open Visit" press="onVisitOpen"/>
			<Button text="Close Visit" press="onVisitClose"/>
			<OverflowToolbarButton icon="sap-icon://save" text="Save Data" press="onVisitSave"/>
		</semantic:customFooterContent>
	</semantic:MasterPage>
</mvc:View>