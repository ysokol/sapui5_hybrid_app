<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog title="Visit Details: {Route} / {Visit}">
		<form:Form width="95%">
			<form:layout>
				<form:ResponsiveGridLayout/>
			</form:layout>
			<form:formContainers>
				<form:FormContainer>
					<form:FormElement label="Customer">
						<form:fields>
							<ComboBox selectedKey="{Customer}" items="{ path: '/Customers', sorter: { path: 'Customer' }, templateShareable : true }">
								<core:Item key="{Customer}" text="{Description}"/>
							</ComboBox>
							<Label text="{Customer}"/>
						</form:fields>
					</form:FormElement>
					<form:FormElement label="Quantity">
						<form:fields>
							<StepInput value="{Quantity}" min="0" max="9999" step="1" largerStep="10"
								enabled="{path: 'SalesOrderDetails/Status', formatter: '.formatter.statusEditable'}"/>
							<ComboBox selectedKey="{OrderUom}" id="OrderUomComboBox"
								items="{ path: '/UnitOfMeasures', sorter: { path: 'Uom' }, templateShareable : true }" change="onMaintenancePlanChange"
								selectionChange="onMaintenancePlanChange" enabled="{path: 'SalesOrderDetails/Status', formatter: '.formatter.statusEditable'}">
								<core:Item key="{Uom}" text="{Uom}"/>
							</ComboBox>
						</form:fields>
					</form:FormElement>
					<form:FormElement label="Price">
						<form:fields>
							<Input value="{Price}" type="Number" enabled="{path: 'SalesOrderDetails/Status', formatter: '.formatter.statusEditable'}"/>
						</form:fields>
					</form:FormElement>
					<form:FormElement label="Amount">
						<form:fields>
							<Label text="{AmountGross}"/>
						</form:fields>
					</form:FormElement>
				</form:FormContainer>
			</form:formContainers>
		</form:Form>
		<beginButton>
			<Button text="Cancel" press="onSalesOrderItemCancel"/>
		</beginButton>
		<endButton>
			<Button text="Confirm" press="onSalesOrderItemConfirm"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>